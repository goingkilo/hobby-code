(defn hex [count ret]
      (let [
	      lines {:6 "- - *"  :7 "---" :8 "- -" :9 "--- *"}
	      toss (fn [] (if (>= (Math/random) 0.5) 3 2))
	      ]
		 (if (= count 0)
		     ret
		     (recur (- count 1) (list* ((keyword (str (+ (toss) (toss) (toss)))) lines) ret)))))


(doseq [x (hex 6 [])] (println x))
